        "@types/node": "^20.10.0",
        "@typescript-eslint/eslint-plugin": "^6.12.0",
        "@typescript-eslint/parser": "^6.12.0",
        "eslint": "^8.54.0",
        "express": "^5.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.2",
